<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context=".stringee_wrapper.ui.activity.CheckDeviceActivity"
    tools:ignore="ContentDescription">

    <data>

        <import type="com.stringee.video_conference_sample.R" />

        <variable
            name="CheckDeviceViewModel"
            type="com.stringee.video_conference_sample.stringee_wrapper.ui.activity.view_model.CheckDeviceViewModel" />
    </data>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:orientation="vertical"
       >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:background="@color/purple_500">

            <ImageButton
                android:id="@+id/imb_back"
                android:layout_width="?attr/actionBarSize"
                android:layout_height="?attr/actionBarSize"
                android:background="@drawable/bg_btn_menu_selector"
                android:contentDescription="@string/back_to_connect_client"
                android:src="@drawable/ic_back" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="?attr/actionBarSize"
                android:ellipsize="end"
                android:gravity="center_vertical"
                android:paddingHorizontal="10dp"
                android:singleLine="true"
                android:text="@{CheckDeviceViewModel.roomName}"
                android:textColor="@color/white"
                android:textSize="22sp" />
        </LinearLayout>

        <androidx.cardview.widget.CardView
            android:id="@+id/cv_preview"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_marginHorizontal="50dp"
            android:layout_marginTop="50dp"
            android:layout_weight="8"
            app:cardBackgroundColor="@color/black"
            app:cardCornerRadius="20dp">

            <FrameLayout
                android:id="@+id/fl_preview"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:background="@color/black" />

            <com.google.android.flexbox.FlexboxLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom"
                android:layout_marginBottom="20dp"
                app:justifyContent="space_evenly">

                <ImageButton
                    android:id="@+id/imb_video"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:layout_gravity="center"
                    android:background="@{CheckDeviceViewModel.isVideoOn?@drawable/bg_btn_ic_selected_selector:@drawable/bg_btn_ic_selector}"
                    android:src="@{CheckDeviceViewModel.isVideoOn?@drawable/ic_cam_on:@drawable/ic_cam_off}" />

                <ImageButton
                    android:id="@+id/imb_mic"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:layout_gravity="center"
                    android:background="@{CheckDeviceViewModel.isMicOn?@drawable/bg_btn_ic_selected_selector:@drawable/bg_btn_ic_selector}"
                    android:src="@{CheckDeviceViewModel.isMicOn?@drawable/ic_mic_on:@drawable/ic_mic_off}" />

                <ImageButton
                    android:id="@+id/imb_switch"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:layout_gravity="center"
                    android:background="@drawable/bg_btn_ic_selected_selector"
                    android:src="@drawable/ic_switch" />

            </com.google.android.flexbox.FlexboxLayout>
        </androidx.cardview.widget.CardView>

        <LinearLayout
            android:id="@+id/v"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="2"
            android:gravity="center"
            android:orientation="vertical">

            <Button
                android:id="@+id/btn_start"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/start" />
        </LinearLayout>

    </LinearLayout>
</layout>