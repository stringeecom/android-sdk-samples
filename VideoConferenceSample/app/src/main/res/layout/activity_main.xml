<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:animateLayoutChanges="true"
    android:fitsSystemWindows="true"
    tools:context=".main.MainActivity">

    <data>

        <import type="android.view.View" />

        <import type="com.stringee.video_conference_sample.main.MainViewModel.MainState" />

        <variable
            name="MainViewModel"
            type="com.stringee.video_conference_sample.main.MainViewModel" />
    </data>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:background="@color/purple_500">

            <ImageButton
                android:id="@+id/imb_back"
                android:layout_width="?attr/actionBarSize"
                android:layout_height="?attr/actionBarSize"
                android:background="@drawable/bg_btn_menu_selector"
                android:contentDescription="@string/back_to_connect_client"
                android:src="@drawable/ic_back"
                android:visibility="@{MainViewModel.mainState == MainState.CONNECT_ROOM? View.VISIBLE : View.GONE}" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="?attr/actionBarSize"
                android:ellipsize="end"
                android:gravity="center_vertical"
                android:paddingHorizontal="10dp"
                android:singleLine="true"
                android:text="@string/video_conference_sample"
                android:textColor="@color/white"
                android:textSize="22sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tv_connect_status"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="20dp"
                android:layout_marginBottom="10dp"
                android:minHeight="50dp"
                android:text="@{MainViewModel.connectStatus}"
                android:textSize="24sp"
                android:visibility="@{MainViewModel.mainState == MainState.CONNECT_ROOM? View.VISIBLE : View.GONE}" />

            <com.google.android.material.textfield.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="40dp"
                android:hint="@string/user_id"
                android:orientation="horizontal"
                android:visibility="@{MainViewModel.mainState == MainState.CONNECT_CLIENT? View.VISIBLE : View.GONE}">

                <com.google.android.material.textfield.TextInputEditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:inputType="text"
                    android:maxLines="1"
                    android:scrollHorizontally="true"
                    android:text="@={MainViewModel.userId}" />
            </com.google.android.material.textfield.TextInputLayout>

            <com.google.android.material.textfield.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="40dp"
                android:hint="@string/room_token"
                android:orientation="horizontal"
                android:visibility="@{MainViewModel.mainState == MainState.CONNECT_ROOM? View.VISIBLE : View.GONE}">

                <com.google.android.material.textfield.TextInputEditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:inputType="text"
                    android:maxLines="1"
                    android:scrollHorizontally="true"
                    android:text="@={MainViewModel.roomToken}" />
            </com.google.android.material.textfield.TextInputLayout>

            <com.google.android.flexbox.FlexboxLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                app:justifyContent="space_evenly">

                <Button
                    android:id="@+id/btn_connect"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/connect"
                    android:visibility="@{MainViewModel.mainState == MainState.CONNECT_CLIENT? View.VISIBLE : View.GONE}" />

                <Button
                    android:id="@+id/btn_create_room"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/create_room"
                    android:visibility="@{MainViewModel.mainState == MainState.CONNECT_ROOM? View.VISIBLE : View.GONE}" />

                <Button
                    android:id="@+id/btn_connect_room"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/connect_room"
                    android:visibility="@{MainViewModel.mainState == MainState.CONNECT_ROOM? View.VISIBLE : View.GONE}" />
            </com.google.android.flexbox.FlexboxLayout>

        </LinearLayout>
    </LinearLayout>
</layout>