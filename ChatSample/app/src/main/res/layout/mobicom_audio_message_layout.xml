<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/stringee_transparent_color"
    android:orientation="vertical"
    android:weightSum="1">

    <FrameLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:layout_margin="0dp"
        android:layout_marginEnd="0dp"
        android:layout_marginLeft="0dp"
        android:layout_marginRight="0dp"
        android:layout_marginStart="0dp"
        android:layout_marginTop="0dp"
        android:background="@color/white">

        <RelativeLayout
            android:layout_width="268dp"
            android:layout_height="242dp"
            android:layout_gravity="center_horizontal|top"
            android:layout_marginBottom="10dp"
            android:background="@color/stringee_transparent_color"
            android:orientation="vertical"
            android:weightSum="1">

            <ImageButton
                android:id="@+id/btn_audio_mic"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_gravity="center_horizontal"
                android:background="@color/stringee_transparent_color"
                android:src="@drawable/stringee_audio_normal" />

            <TextView
                android:id="@+id/tv_count"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/btn_audio_mic"
                android:layout_centerHorizontal="true"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="55dp"
                android:text="00:00:00"
                android:textAlignment="center"
                android:textColor="@color/black"
                android:textSize="30sp" />

            <TextView
                android:id="@+id/tv_audio_recording"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/btn_audio_mic"
                android:layout_centerHorizontal="true"
                android:text="@string/start" />

            <Button
                android:id="@+id/btn_audio_cancel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_alignParentStart="true"
                android:layout_gravity="start|bottom"
                android:background="@color/stringee_transparent_color"
                android:text="@string/cancel" />

            <Button
                android:id="@+id/btn_audio_send"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignTop="@+id/btn_audio_cancel"
                android:layout_gravity="end|bottom"
                android:layout_toEndOf="@+id/btn_audio_mic"
                android:background="@color/stringee_transparent_color"
                android:text="@string/send" />
        </RelativeLayout>
    </FrameLayout>
</RelativeLayout>